#include <iostream>

using namespace std;

int getmax(int a[],int n){
    int max = INT_MIN ;
    for(int i=0 ; i< n; i++){
        if(max<a[i])
            max = a[i];
    }
   return max;
}

int getmin(int a[],int n){
    int min = INT_MAX;
    for(int i=0 ; i< n; i++){
        if(min>a[i])
            min = a[i];
    }
   return max;
}

int main()
{
    
    int arr[10] = {0,1,2,3};
    cout<<"Maximum : "<<getmax(arr[],4);
    cout<<"Minimum : "<<getmin(arr[],4);
    return 0;
}
