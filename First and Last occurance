#include <iostream>

using namespace std;

int firstOcccur(int arr[], int size, int key){
    int start = 0, end = size - 1;
    int mid = start + (end - start )/2;
    int ans = -1;
    while(start <= end ){
        if(arr[mid]==key){
            ans = mid;
            end = mid - 1;
        }
        else if(arr[mid]>key){
            end = mid - 1; 
        }
        else if(arr[mid]<key){
            start = mid + 1;
        }
        mid = start + (end - start )/2;
    }
    return ans;
}

int lastOcccur(int arr[], int size, int key){
    int start = 0, end = size - 1;
    int mid = start + (end - start )/2;
    int ans = -1;
    
    while(start <= end ){
        if(arr[mid]==key){
            ans = mid;
            start = mid + 1;
        }
        else if(arr[mid]>key){
            end = mid - 1;
        }
        else if(arr[mid]<key){
            start = mid + 1;
        }
        mid = start + (end - start )/2;
    }
    return ans;
}

int main()
{
    int arr[10]={1,2,3,3,3,3,3,4,5,6};
    int size = sizeof(arr)/sizeof(int);
    int key = 3;
    
    cout << "The First occourance of 3 : " << firstOcccur(arr,size,key) << endl; 
    cout << "The Last occourance of 3 : " << lastOcccur(arr,size,key) << endl;

    return 0;
}
