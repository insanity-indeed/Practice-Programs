#include <iostream>

using namespace std;

bool isEven(int num){
    if (num&1)
        return 0;
    else 
        return 1;
}

int main()
{
    int n;
    cout<<"Enter the number : ";
    cin>>n;
    if(isEven(n)==1)
        cout<<"N is even ."<<endl;
    else 
        cout<<"N is Odd ."<<endl;
    
    return 0;
}
